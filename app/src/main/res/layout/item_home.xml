<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/v_item"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipToPadding="false">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_karangan"
        android:layout_width="@dimen/item_size"
        android:layout_height="@dimen/item_size"
        android:layout_gravity="center|top"
        android:clipToPadding="false"
        app:theme="@style/CardViewStyle"
        android:theme="@style/CardViewStyle"
        style="@style/CardViewStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_item"
                android:layout_width="@dimen/button_home_height"
                android:layout_height="@dimen/button_home_height"
                android:adjustViewBounds="true"
                android:scaleType="center"
                android:background="@color/transparent"
                android:layout_marginBottom="@dimen/medium_padding"/>

            <TextView
                android:id="@+id/tv_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:gravity="center"
                android:textAllCaps="false"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_medium" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</FrameLayout>